<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_hot_left"
        android:layout_width="0px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/text_left"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            android:id="@+id/progressBar_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/custom_progres"
            android:layout_below="@+id/img_left"
            android:max="100"
            android:progress="70"
            android:layout_centerHorizontal="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false" />

        <TextView
            android:id="@+id/text_progress_recommend_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/progressBar_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_progress_aVoid_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/progressBar_left"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_hot_right"
        android:layout_width="0px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/text_right"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            android:id="@+id/progressBar_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/custom_progres"
            android:layout_below="@+id/img_right"
            android:max="100"
            android:progress="70"
            android:layout_centerHorizontal="true"
            style="?android:attr/progressBarStyleHorizontal" />
        <TextView
            android:id="@+id/text_progress_recommend_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/progressBar_right"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_progress_aVoid_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/progressBar_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>
